<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newprescription_two"
    android:background="@drawable/pres_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <EditText
            android:id="@+id/pprescription"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:background="@drawable/inputfield_one"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:inputType="textMultiLine"
            android:hint="Prescription"/>

        <Button
            android:id="@+id/pprescriptionmice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_mic_red"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp">

        <EditText
            android:id="@+id/padvice"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:background="@drawable/inputfield_one"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:inputType="textMultiLine"
            android:hint="Advice"/>

        <Button
            android:id="@+id/padvicemice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_mic_red"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/viewpreview"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="@drawable/viewpreview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"/>


</RelativeLayout>