<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_bg">

    <Button
        android:id="@+id/signout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/logout" />

    <EditText
        android:id="@+id/docname"
        android:layout_width="399dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:background="@drawable/time_bg"
        android:paddingLeft="50dp"
        android:paddingBottom="10dp"
        android:text="Dr. Lorem Ipsum"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_pres"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/docname"
        android:layout_alignLeft="@+id/docname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:background="@drawable/new_pres" />

    <Button
        android:id="@+id/patient_history"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/docname"
        android:layout_alignRight="@+id/docname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:background="@drawable/patient_history" />

    <Button
        android:id="@+id/old_pres"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/old_prescription" />

    <Button
        android:id="@+id/aboutme"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:background="@drawable/aboutme" />


</RelativeLayout>
