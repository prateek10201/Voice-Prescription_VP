<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_bg">

    <Button
        android:id="@+id/signout"
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/logout" />

    <EditText
        android:id="@+id/docname"
        android:layout_width="165dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/time_bg"
        android:paddingLeft="38dp"
        android:paddingBottom="5dp"
        android:text="Dr. Lorem Ipsum"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_pres"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/docname"
        android:layout_alignLeft="@+id/docname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/new_pres" />

    <Button
        android:id="@+id/patient_history"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/docname"
        android:layout_alignRight="@+id/docname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:background="@drawable/patient_history" />

    <Button
        android:id="@+id/old_pres"
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:background="@drawable/old_prescription" />

    <Button
        android:id="@+id/aboutme"
        android:layout_width="165dp"
        android:layout_height="25dp"
        android:background="@drawable/aboutme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"/>


</RelativeLayout>
